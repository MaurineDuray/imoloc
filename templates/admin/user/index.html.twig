{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs {% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-3">Administration des utilisateurs </h1>
    <table class="table table-hover">
        <thead>
            <tr>
            
                <th>ID</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Mail</th>
                <th>Introduction</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in pagination.data %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.firstName}}</td>
                    <td>{{user.lastName}}</td>
                    <td>{{user.email}}</td>
                    <td>{{user.introduction}}</td>
                    {% if user.id==1 %}
                        <td>
                            Administrateur
                        </td>
                    {% else %}
                        <td>
                        <a href="{{path('admin_users_edit', {'id':user.id})}}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="{{path('admin_users_delete', {'id': user.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                    {% endif %}
                    
                    
                </tr>
                
            {% endfor %}
        </tbody>
    </table>
    {{pagination.display()}}
</div>
{% endblock %}

