{% extends 'base.html.twig' %}

{% block title %}Modification de l'image de l'utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modification de l'avatar de {{app.user.email}}</h1>
        <img src="/uploads/{{app.user.picture}}" alt="avatar de {{app.user.email}}">
        {{form_start(myform)}}
            {{form_widget(myform)}}
            <button type="submit" class="btn btn-warning"> Confirmer la modification de l'avatar</button>
        {{form_end(myform)}}
    </div>
{% endblock %}