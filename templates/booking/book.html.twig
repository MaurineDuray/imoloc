{% extends 'base.html.twig' %}

{% block title %}Réserver l'annonce: {{ad.title}}{% endblock %}

{% block body %}
    <div class="container full">
        <h1>Réservation de l'annonce: {{ad.title}}</h1>
        <p>Vous êtes sur le point de réserver le bien <strong>{{ad.author.fullName}}</strong></p>
        {{form_start(myform)}}
            <div class="bg-light p-3">
                <div class="row">
                    <div class="col">
                        {{form_widget(myform.startDate)}}
                    </div>
                     <div class="col">
                        {{form_widget(myform.endDate)}}
                    </div>
                </div>
                <h4>Montant du séjour: <span id="amount">...</span></h4>
                <span id="days">0 <span>nuit(s) à {{ad.price}}&euro; /nuit</span></span>
                <h4 class="mt-3"> Vous avez un commentaire ?</h4>
                {{form_widget(myform.comment)}}
            </div>
            <h2 class="mt-3">Vous avez terminé ! </h2>
            <button class="btn btn-success" type="submit">Réserver</button>
        {{form_end(myform)}}
    </div>
{% endblock %}
